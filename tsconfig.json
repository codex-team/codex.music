{
  "compilerOptions" : {
    "typeRoots" : ["./types"],
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "removeComments": true,
    "declaration": true,
    "declarationDir": "dist",
    "importHelpers": true,
    "moduleResolution": "node", // This resolution strategy attempts to mimic the Node.js module resolution mechanism at runtime
    "lib": ["dom", "es2017", "es2018"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "example"
  ]
}
